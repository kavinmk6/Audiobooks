<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/imgViewPodcast"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPodcastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgViewPodcast"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Yuvan Hits" />

    <TextView
        android:id="@+id/tvPodcastAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@+id/imgViewPodcast"
        app:layout_constraintTop_toBottomOf="@+id/tvPodcastName"
        tools:text="Yuvan Sankar Raja" />


    <TextView
        android:id="@+id/tvPodcastFavourite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/favourited"
        android:textColor="@color/purple_200"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@+id/imgViewPodcast"
        app:layout_constraintTop_toBottomOf="@+id/tvPodcastAuthor"
        tools:text="Favourited"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>